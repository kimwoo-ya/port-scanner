{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "port-scanner",
  "version": "0.1.0",
  "identifier": "com.kyw.port-scanner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "width": 540,
        "resizable": false,
        "title": "port-scanner",
        "height": 600,
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
